{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": ".", // see https://github.com/Microsoft/TypeScript/issues/8245
    "rootDirs": [
      "src",
      "aot"
    ],
    "declaration": true,
    "outDir": "./dist.aot" ,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    // "./src/app/app.module.ts" /* this includes all dependents */
    // ,"src/polyfills.ts"
    "src/main.aot.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./aot"
  }
}
